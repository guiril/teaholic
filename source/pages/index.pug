      h2.copywriting__title-lg.u-d-none.u-md-d-block.u-md-text-center.u-md-mb-8
        img.copywriting__title-img.copywriting__title-img--lg(src="images/copywriting-3.svg", alt="想喝紅茶是不需要理由的")
